#!/usr/bin/env nu

def "from env" []: string -> record {
  lines 
  | split column '#' # remove comments
  | get column1 
  | parse "{key}={value}"
  | str trim value -c '"' # unquote values
  | transpose -r -d
}

try {
  let key = cat $'($env.HOME)/.config/scripts/.env' | from env | get "WAKATIME_ENV"

  let dirname = pwd | path basename

  let headers = {
    "Authorization": $"Basic $($key | encode base64)"
  }

  let proj = http get --headers $headers https://wakatime.com/api/v1/users/current/summaries?range=Today | get data.projects | first | filter {|p| ($p|get name) == $dirname} | first

  if ($proj | is-not-empty ) {
    $proj | get text
  }

} catch {print ""}
