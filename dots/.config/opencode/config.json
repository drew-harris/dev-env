{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest",
        "--browserUrl=http://127.0.0.1:9425"
      ],
    }
  },
  "autoupdate": true,
  "agent": {
    "ask": {
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "permission": {
        "edit": "ask",
        "bash": "ask",
        "webfetch": "allow"
      }
    }
  }
}